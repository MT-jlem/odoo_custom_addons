<odoo>
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">task.manager.task.tree</field>
        <field name="model">task.manager.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="due_date"/>
                <field name="priority"/>
                <field name="status"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="name">task.manager.task.form</field>
        <field name="model">task.manager.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="due_date"/>
                        <field name="priority"/>
                        <field name="status"/>
                        <field name="category_ids"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
